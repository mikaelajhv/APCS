
public class Package {
	
	private int dim1, dim2, dim3, weight;
	private boolean isTooHeavy, isTooLarge;
	//public static final int ACCEPTABLE = 0, TOO_HEAVY = 1, TOO_LARGE = 2, TOO_LARGE_TOO_HEAVY = 3;
	
	public Package(boolean heavy, boolean large, int dim1, int dim2, int dim3, int weight)
	{
		isTooHeavy = heavy;
		isTooLarge = large;
		this.dim1 = dim1;
		this.dim2 = dim2;
		this.dim3 = dim3;
		this.weight = weight;
	}
	
	public int calcStat(int dim1, int dim2, int dim3, int weight)
	{
		this.dim1 = dim1;
		this.dim2 = dim2;
		this.dim3 = dim3;
		this.weight = weight;
		int size = 0;
		int status;
		
		if (weight > 70)
		{
			isTooHeavy = true;
		}
		else
		{
			if (dim1 > dim2 && dim1 > 3)
			{
				size = dim1 + (2*(dim2 + dim3));
			}
			else if (dim2 > dim1 && dim2 > dim3)
			{
				size = dim2 + (2*(dim1 + dim3));
			}
			else
			{
				size = dim3 + (2*(dim1 + dim2));
			}
			return size;
		}
		
		if (size > 100)
		{
			isTooLarge = true;
			if (isTooHeavy = true)
			{
				status = 3;
				return status;
			}
		}
		else
		{
			if (isTooHeavy = true)
			{
				status = 1;
				return status;
			}
			else
			{
				if (isTooLarge == true)
				{
					status  = 2;
					return status;
				}
				else
				{
					status = 0;
					return status;
				}
			}
		}
		return status;
		
	}

}
